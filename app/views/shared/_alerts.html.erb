<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "DailySmarty Alert", sticky: false, time: 1000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "DailySmarty Error", sticky: false, time: 1000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "DailySmarty Notification", sticky: false, time: 1000) %>
<% end %>